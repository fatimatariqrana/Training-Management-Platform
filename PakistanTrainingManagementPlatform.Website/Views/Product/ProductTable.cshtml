@using PakistanTrainingManagementPlatform.Entities
@model List<Product>
@{
    ViewBag.Title = "ProductTable";
}

<h2>ProductTable</h2>
<div>
    <form method="post">
        <input name="Search" id="searchTxt" />
        <button type="button" id="searchBtn">Search</button>
        <button type="button" id="newBtn">New</button>
    </form>
</div>
<div>
<table>
    <thead>
        <tr>
            <td>Product Name</td>
            <td>Category</td>
            <td>Price</td>
            <td>Actions</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>--</td>
                <td>@product.Price</td>
                <td>
                    <button class="editBtn" data_id="@product.ID">Edit</button>
                    <button class="deleteBtn" data_id="@product.ID">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
    </div>


<script>
    $("#searchBtn").click(function () {
        var searchValue = $("#searchTxt").val();
        $.ajax({
            url: '/Product/ProductTable',
            data: {
                search: searchValue
            }
        })
            .done(function (response) {
                $("#tableContainer").html(response);
            })
            .fail(function (XMLHttpRequest, testStatus, errorThrown) {
            });

    });
</script>


<script>
    $("#newBtn").click(function () {

        $.ajax({
            url: '/Product/Create',

        })
            .done(function (response) {
                $("#actionContainer").html(response);
            })
            .fail(function (XMLHttpRequest, testStatus, errorThrown) {
            });

    });
</script>

<script>
    $(".editBtn").click(function () {

        $.ajax({
            url: '/Product/Edit',
            data: {
                ID: $(this).attr('data_id')
            }

        })
            .done(function (response) {
                $("#actionContainer").html(response);
            })
            .fail(function (XMLHttpRequest, testStatus, errorThrown) {
            });

    });
</script>

<script>
    $(".deleteBtn").click(function () {
        var confirmDelete = confirm("Are you sure you want to delte this product?");
        if (confirmDelete) {
            $.ajax({
                type: 'POST',
                url: '/Product/Delete',
                data: {
                    ID: $(this).attr('data_id')
                }

            })
                .done(function (response) {
                    $("#tableContainer").html(response);
                })
                .fail(function (XMLHttpRequest, testStatus, errorThrown) {
                });
        }
    });
</script>